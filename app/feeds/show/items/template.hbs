<div id="feed-header" class="ui horizontal menu">

  <div class="header item">{{model.feed.title}}</div>

  <a title="Mark all articles read" class="item" {{action "markAllArticlesAsRead" model.feed}}>
    <i class="ui icon check mark"></i>
  </a>

  {{#ui-dropdown class="dropdown item"}}
    More
    <i class="ui icon ellipsis vertical"></i>
    <div class="ui labeled icon menu">
      <a class="item" title="Edit feed">
        <i class="edit icon"></i>
        Edit
      </a>
      <a class="item" {{action "deleteFeed" model.feed}} title="Remove feed">
        <i class="delete icon"></i>
        Delete
      </a>
    </div>
  {{/ui-dropdown}}

</div>

<div id="articles-container">

  <div id="article-list-container">
    {{article-list articles=model}}

    {{#infinity-loader infinityModel=model scrollable="#article-list-container" destroyOnInfinity=true}}
      {{partial "loading-articles"}}
    {{/infinity-loader}}

  </div>

  <div id="article-content-container">
    {{liquid-outlet "article-content"}}
  </div>

</div>


