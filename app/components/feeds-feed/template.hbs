<div class="card-block">
    <div class="card-title">

        <div class="feed-title">

            <div class="feed-icon">
              {{#if feed.faviconLink}}
                  <img src="{{feed.faviconLink}}" alt="feed-icon"/>
              {{else}}
                  <span class="fa fa-feed"></span>
              {{/if}}
            </div>
          {{#if editFeedTitle}}
            {{feed-title-change feed=feed stopEditing=(action toggleProperty "editFeedTitle")}}
          {{else}}
            {{feed.title}}
          {{/if}}
        </div>

        <div class="feed-item-actions">
            <div class="feed-button-group btn-group feed-button-group">
                <button type="button" class="btn btn-secondary-outline hint--rounded hint--top"
                        data-hint="Edit feed title" {{action toggleProperty "editFeedTitle"}}>
                    <span class="fa fa-pencil"></span>
                </button>

                <button type="button" class="btn btn-secondary-outline hint--rounded hint--top"
                        data-hint="Set all articles read" {{action "markAllRead"}}
                        disabled={{markReadDisabled}}>
                    <i class="fa fa-eye-slash"></i>
                </button>
            </div>
          {{#if feed.unreadCount}}
              <span class="label label-default small feed-unread-count">
                {{feed.unreadCount}}
              </span>
          {{/if}}
        </div>
    </div>
</div>
{{yield}}


