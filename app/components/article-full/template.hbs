<h4 class="ui large header">
  {{article.title}}
</h4>

<div class="article-body">
  {{#if showOriginalArticle}}
      <div class="article-embed">
          <iframe src={{article.url}} frameborder="0"></iframe>
      </div>
  {{else}}
    {{body}}
  {{/if}}
</div>

<div class="extra">
    <button class="ui button" {{action toggleProperty "showOriginalArticle"}}>Open Original</button>
</div>
