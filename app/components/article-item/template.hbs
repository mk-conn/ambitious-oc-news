<div class="ui tiny image">
    <img src={{articleImage}}>
  {{article-buttons article=article onOpenArticle=onOpenArticle}}
</div>
<div class="content">
    <div class="header">
      {{article.title}}
    </div>
    <div class="meta">
        <div>
          {{#if article.author}}
            {{article.author}} |
          {{/if}}
          {{moment-format article.pubDate 'LLLL' 'X'}} | {{article.feed.title}}
        </div>
    </div>
    <div class="description">
      {{excerpt}}
      {{article.feed.title}}
    </div>
</div>