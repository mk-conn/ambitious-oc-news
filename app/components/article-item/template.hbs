<div class="ui tiny image">
  <img src={{articleImage}}>
</div>
<div class="content">

  {{#link-to "feeds.show.items.show" article activeClass="active" tagName="div" classNames="action"}}
  {{!--<div class="action" {{action "openArticle" article}}>--}}
    <h4 class="ui article-title {{readOrUnread}} header">{{title}}</h4>
    {{moment-format article.pubDate 'LLLL' 'X'}}
    <div class="meta">
      <i>{{#if article.author}}
        {{article.author}} |
      {{/if}}
        {{article.feed.title}}</i>
    </div>
    <div class="description">
      {{excerpt}}
    </div>
  {{!--</div>--}}
  {{/link-to}}
  <div class="extra">
    {{article-buttons article=article onOpenArticle=onOpenArticle}}
  </div>

</div>
